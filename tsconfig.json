{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"DOM",
			"ES2020",
			"WebWorker"
		],
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"types": [
			"svelte",
			"node"
		]
	},
	"include": [
		"webpack*.ts",
		"svelte.config.js",
		"build/**/*",
		"src/**/*",
	],
	"exclude": [
		"**/node_modules/*",
		"public/*"
	]
}